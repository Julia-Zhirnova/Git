<Window x:Class="Name_of_company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Name_of_company"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="Aqua"></Grid>
        <Grid Grid.Column="1" Background="Black"></Grid>
        <Image x:Name="осень2_jpg" Grid.Column="0" Source="осень2.jpg" VerticalAlignment="Center"/>
        <TextBlock > Название компании </TextBlock>
        <Label Grid.Column="1" Foreground="White"  > Название компании </Label>
    </Grid>
</Window>
